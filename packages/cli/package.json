{
  "name": "@jimp/cli",
  "version": "0.4.0",
  "description": "jimp library as a cli",
  "main": "dist/index.js",
  "module": "es/index.js",
  "scripts": {
    "test": "mocha --require ts-node/register test/*.test.ts",
    "test:coverage": "nyc npm run test -- --require source-map-support/register --recursive",
    "build": "tsc",
    "build:debug": "npm run build -- --sourceMap",
    "build:watch": "npm run build -- --watch --sourceMap"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@jimp/custom": "^0.4.0",
    "chalk": "^2.4.1",
    "jimp": "^0.4.0",
    "log-symbols": "^2.2.0",
    "log-update": "^2.3.0",
    "yargs": "^12.0.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/log-symbols": "^2.0.0",
    "@types/mocha": "^5.2.5",
    "@types/yargs": "^11.1.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/*.ts"
    ],
    "reporter": [
      "html",
      "text"
    ]
  }
}
